<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="SqlServerTables" targetRuntime="MyBatis3">

		<plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>
		<plugin type="com.ymatou.deviceid.mybatisgenerator.RenameModelPlugin">
			<property name="prefixes2Remove" value="tb, ymt" />
			<property name="suffix2Append" value="Po" />
		</plugin>
				
		<plugin type="com.ymatou.deviceid.mybatisgenerator.ForceCreateUpdateTimePlugin">
            <property name="insertTimeColumns" value="dAddTime,CreateTime, TriggerTime, AddTime"/>
            <property name="lastUpdateTimeColumns" value="dLastUpdateTime, dUpdateTime, LastUpdateTime, UpdateTime"/>
            <property name="dbCurrentTimeExpr" value="getdate()"/>
		</plugin>
		
		<commentGenerator type="com.ymatou.deviceid.mybatisgenerator.DBCommentGenerator">
			<property name="suppressAllComments" value="true" />
		</commentGenerator>


		<jdbcConnection driverClass="net.sourceforge.jtds.jdbc.Driver"
			connectionURL="jdbc:jtds:sqlserver://172.16.188.81:1433/YmtAlpha"
			userId="dev" password="123456">
			<property name="remarksReporting" value="true" />
		</jdbcConnection>

		<javaModelGenerator
			targetPackage="com.ymatou.deviceid.infrastructure.db.model"
			targetProject="infrastructure\src\main\java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<sqlMapGenerator targetPackage="sqlmap.autogenerated"
			targetProject="infrastructure\src\main\resources">
		</sqlMapGenerator>


		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.ymatou.deviceid.infrastructure.db.mapper"
			targetProject="infrastructure\src\main\java">
		</javaClientGenerator>

		<table tableName="Ymt_RefundBill" domainObjectName="RefundBill"
			   enableInsert="false" enableUpdateByPrimaryKey="false"
			   enableDeleteByPrimaryKey="false" enableDeleteByExample="false"
			   enableUpdateByExample="false">
			<property name="useActualColumnNames" value="true"></property>
			<columnRenamingRule searchString="^i|^d|^f|^b|^s" replaceString=""></columnRenamingRule>
			<columnOverride column="id" javaType="Long"/>
			<columnOverride column="OrderId" javaType="Long"/>
			<columnOverride column="BuyerId" javaType="Long"/>
			<columnOverride column="SellerId" javaType="Long"/>
			<ignoreColumn column="DataVersion"></ignoreColumn>
		</table>
	</context>

</generatorConfiguration>
